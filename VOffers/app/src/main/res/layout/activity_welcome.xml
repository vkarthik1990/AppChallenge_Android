<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.karthikvenkat.voffers.WelcomeActivity"
    android:background="#ff000000">

    <TextView android:text="WELCOME TO VISA OFFERS" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="80dp"
        style="@style/AlertDialog.AppCompat"
        android:fontFamily="@string/common_google_play_services_update_text"
        android:textSize="16dp"
        android:textIsSelectable="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#fffcfff6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER CARD"
        android:id="@+id/reg"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_marginTop="53dp"
        android:src="@mipmap/images"
        android:layout_below="@+id/reg"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
